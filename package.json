{
  "name": "av",
  "description": "Audio decoding framework",
  "version": "0.3.1",
  "author": {
    "name": "Audiocogs",
    "url": "http://audiocogs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/audiocogs/aurora.js.git"
  },
  "bugs": "https://github.com/audiocogs/aurora.js/issues",
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-cli": "^6.23.0",
    "babel-plugin-espower": "^2.3.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-register": "^6.23.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-hapi": "^4.0.0",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-no-inferred-method-name": "^1.0.2",
    "eslint-plugin-react": "^6.10.0",
    "eslint-plugin-xss": "^0.1.8",
    "nyc": "^10.1.2",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-json": "^2.1.0"
  },
  "scripts": {
    "lint": "eslint src",
    "local-web-server": "ruby -run -e httpd . -p 8181",
    "make": "node rollup.config.js",
    "report": "nyc report --reporter=html",
    "test-watch": "npm test -- --watch",
    "test": "NODE_ENV=test nyc ava",
    "validate": "npm ls"
  },
  "engine": [
    "node >= v6.0.0"
  ],
  "main": "node.js",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "ignore": "tests/**/*.js",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": false,
    "tap": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ],
    "verbose": true,
    "babel": "inherit"
  },
  "nyc": {
    "cache": true,
    "all": true,
    "check-coverage": false,
    "include": [
      "src/**/*.js"
    ]
  }
}
